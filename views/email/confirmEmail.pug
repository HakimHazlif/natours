extends baseEmail

block content
  p Hi #{firstName},
  p Thank you for registering! Please confirm your email address by clicking the button below:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Confirm your email
  p If you did not sign up for this account, please ignore this email.
